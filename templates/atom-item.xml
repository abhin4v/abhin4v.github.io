<entry>
    <title>$title$</title>
    <link href="$root$$url$" />
    <id>$root$$url$</id>
    <published>$published$</published>
    <updated>$updated$</updated>
    $if(author)$
    <author>
        <name>$author$</name>
    </author>
    $endif$
    $for(tags_list)$
    <category term="$tag$" />
    $endfor$
    <summary type="html"><![CDATA[$description$]]></summary>
</entry>
